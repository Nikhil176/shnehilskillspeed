<p id="notice"><%= notice %></p>

<h1>Sales Directory</h1>

<div class="media">
 <div class="media-body">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Course</th>
	      <th>Customer</th>
	      <th>Status</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @sales_teams.each do |sales_team| %>
	      <tr>
		<td><%= sales_team.Name %></td>
		<td><%= sales_team.Course %></td>
		<td><%= sales_team.Customer %></td>
		<td><%= sales_team.Status %></td>
		<td><%= link_to 'Show', sales_team, class: 'btn btn-mini' %></td>
		<td><%= link_to 'Edit', edit_sales_team_path(sales_team), class: 'btn btn-mini btn-success' %></td>
		<td><%= link_to 'Destroy', sales_team, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
 	</table>
  </div>  
</div>
<br>

